<!-- Header-->
<header class="bg-dark py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="text-center text-white">
      <h1 class="display-4 fw-bolder">Shop in style</h1>
      <p class="lead fw-normal text-white-50 mb-0">With this shop hompeage template</p>
    </div>
  </div>
</header>
<!-- Section-->
<section class="py-5">
  <div class="container px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% @products.each do |product| %>
        <div class="col mb-5">
          <div class="card h-100">
            <!-- Product image-->
            <%= link_to image_tag(product.image.variant(resize_to_fill: [450, 300]), class: "card-img-top"), product_path(product) %>
            <!-- Product details-->
            <div class="card-body p-4">
              <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder"><%= link_to product.name,  product_path(product) %></h5>
                <!-- Product price-->
                ¥<%= product.price %>
              </div>
            </div>
            <!-- Product actions-->
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
              <div class="text-center">
                <%= button_to "カートに入れる", cart_items_path, { params: {product_id: product.id, quantity: 1}, class: "btn btn-outline-dark mt-auto" } %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
