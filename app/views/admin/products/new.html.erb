<div class="container text-center">
  <div class="row">
    <div class="col">
      <div class="d-flex justify-content-start">
        <h1 class="mt-2">商品の新規登録</h1>
      </div>
      <div class="d-flex justify-content-end">
        <%= link_to "一覧", admin_products_path, class: "mb-2" %>
      </div>
      <%= form_with model: @product, url: admin_products_path do |f| %>
        <div class="mb-3">
          <%= f.label :name, "名前", class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :price, "値段", class: "form-label" %>
          <%= f.text_field :price, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :description, "詳しい説明", class: "form-label" %>
          <%= f.text_area :description, class: "form-control", rows: "3" %>
        </div>
        <div class="mb-3">
          <%= f.label :image, "画像", class: "form-label" %>
          <%= f.file_field :image, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.submit "登録する", class: "btn btn-primary mb-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>