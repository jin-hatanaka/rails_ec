<div class="container text-center">
  <div class="row">
    <div class="col">
      <div class="d-flex justify-content-start">
        <h1 class="mt-2">注文の詳細</h1>
      </div>
      <div class="d-flex justify-content-end">
        <%= link_to "注文履歴", admin_orders_path, class: "mb-2" %>
      </div>
      <div class="border border-1 rounded p-2 mb-2">
        <div class="d-flex justify-content-start">
          <p class="fw-semibold me-1">注文ID:</p>
          <p><%= @order.id %></p>
        </div>
        <div class="d-flex justify-content-start">
          <p class="fw-semibold me-1">注文日:</p>
          <p><%= @order.created_at.to_fs(:datetime_jp) %></p>
        </div>
        <div class="d-flex justify-content-start">
          <p class="fw-semibold me-1">お届け先住所:</p>
          <p><%= "#{@order.last_name}#{@order.first_name} #{@order.zip} #{@order.address1} #{@order.address2}" %></p>
        </div>
        <div class="d-flex justify-content-start">
          <p class="fw-semibold me-1">ご請求額:</p>
          <p>¥<%= @order.total %></p>
        </div>
          
      </div>
      <div class="border border-1 rounded p-2 mb-3">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">商品名</th>
              <th scope="col">数量</th>
              <th scope="col">価格</th>
            </tr>
          </thead>
          <tbody>
            <% @order_details.each do |order_detail| %>
              <tr>
                <td><%= order_detail.product_name %></td>
                <td><%= order_detail.quantity %></td>
                <td>¥<%= order_detail.price %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
